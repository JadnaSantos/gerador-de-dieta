{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "nodenext",
    "target": "ES2022",
    "types": [
      "node"
    ],
    "lib": [
      "ES2022"
    ],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}